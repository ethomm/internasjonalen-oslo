-provide(:title, "Tekniske Pesifikasjoner")
-provide(:canonical, "/tekniskespsifikasjoner")
%section.container.mt-4.mb-4
	%article
		.row.mb-4		
			.col-12.col-lg-5
				%h2.pb-4.pt-4
					Tekniske spesifikasjoner
		- @tekniskcategories.each do |t|
			.row.mt-2
				.col-12.col-lg-5
					%h5
						= t.title
					%ul.utstyrsliste
						- t.tekniskitems.each do |i|
							%li
								= i.antall
								x
								= i.title
		- if @tekniskperson
			.row.mt-4.mb-4
				.col-12.col-lg-5
					%h3
						Teknisk kontaktperson
					.row.mt-4.pt-4.pb-4
						.col-12
							%h5
								%i.fa.fa-user{"aria-hidden" => "true"}
								= @tekniskperson.name
								%small
									-
									= @tekniskperson.position
							%p
								%i.fa.fa-envelope-o{"aria-hidden" => "true"}
								= @tekniskperson.email
							- if @tekniskperson.showtelefon?
								%p
									%i.fa.fa-phone{"aria-hidden" => "true"}
									(+47)
									= @tekniskperson.telefon
