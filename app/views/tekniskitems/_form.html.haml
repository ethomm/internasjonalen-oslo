= form_for @tekniskitem do |f|
  - if @tekniskitem.errors.any?
    #error_explanation
      %h2= "#{pluralize(@tekniskitem.errors.count, "error")} prohibited this tekniskitem from being saved:"
      %ul
        - @tekniskitem.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :antall
    = f.number_field :antall
  .field
    = f.label :tekniskcategory
    = f.text_field :tekniskcategory
  .field
    = f.label :status
    = f.text_field :status
  .actions
    = f.submit 'Save'
