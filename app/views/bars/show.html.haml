-provide(:title, "VÃ¥r spennende #{@bar.title}")
-provide(:canonical, "/bar/#{@bar.slug}")
%section.container.mt-4.mb-4
	%article.row.justify-content-center.mb-2		
		.col-10
			%h2.pb-4.pt-4
				= @bar.title.upcase
			-if @bar.top_image?
				%img{src: @bar.top_image}
			%p
				= @bar.body.html_safe
	%aside.row.justify-content-center
		.col-10
			.row.mb-4.pb-3
				- @bar.barimages.each do |i|
					.col-6.col-md-4.col-lg-3.mt-1
						%a{:href => i.image_url.url, 'data-lightbox' => @bar.title, 'data-title' => i.description}
							= image_tag i.image_url.url(:mobile)
