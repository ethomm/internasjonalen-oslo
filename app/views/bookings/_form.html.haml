= form_for @booking do |f|
  - if @booking.errors.any?
    #error_explanation
      %h2= "#{pluralize(@booking.errors.count, "error")} prohibited this booking from being saved:"
      %ul
        - @booking.errors.full_messages.each do |message|
          %li= message

  .row.mt-3
    .col-12
      %strong
        = f.label :title
      = f.text_field :title, :class => 'form-control'
  .row.mt-3
    .col-12
      %strong
        = f.label "SEO beskrivelse"
      = f.text_area :seodescription, :id => 'seodescription', :class => "form-control", :height => '200px'
  .row
    .col-12#seodescriptionfeedback.text-muted.text-right
      Tegn igjen:
      %span#seodescriptioncount
        160
  .row.mt-2
    .col-12
      %strong
        = f.label :body
      = f.cktext_area :body, :class => 'form-control'
  .row.mt-3
    .col-6
      - if @booking.id?
        = link_to administrator_editbooking_path(:id => @booking.id) do
          %button.btn.btn-warning.btn-block.btn-lg
            %i.fa.fa-reply{"aria-hidden" => "true"}
            Tilbake
      -else
        = link_to administrator_booking_path do
          %button.btn.btn-warning.btn-block.btn-lg
            %i.fa.fa-reply{"aria-hidden" => "true"}
            Tilbake
    .col-6
      = f.submit 'Lagre', :class => "btn btn-lg btn-success btn-block"
