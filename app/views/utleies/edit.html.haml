.container
	.row.justify-content-center
		.col-md-8.col-lg-5.col-12
			.row.mt-4
				.col-12.text-center
					%h2
						Utleie kontaktinfo
			= form_for @utleie do |f|
				- if @utleie.errors.any?
					#error_explanation
						%h2= "#{pluralize(@utleie.errors.count, "error")} prohibited this utleie from being saved:"
						%ul
							- @utleie.errors.full_messages.each do |message|
								%li= message	
				.row.mt-3
					.col-12
						= f.label :booking_email
						= f.email_field :booking_email, :class => "form-control"
				.row.mt-3
					.col-12
						= f.label :contactperson
						= f.text_field :contactperson, :class => "form-control"
				.row.mt-3
					.col-12
						= f.label :contact_email
						= f.email_field :contact_email, :class => "form-control"
				.row.mt-3
					.col-12
						= f.label :contact_position
						= f.text_field :contact_position, :class => "form-control"
				.row.mt-4
					.col-12
						= f.label :contact_number
						= f.number_field :contact_number, :class => "form-control"
				.row.mt-4
					.col-12
						= f.label :show_contact_number
						= f.check_box :show_contact_number, :class => "form-control"
				.row.mt-2
					.col-6.pt-3
						= link_to :back do
							%button.btn.btn-warning.btn-block
								%i.fa.fa-reply{"aria-hidden" => "true"}
								Tilbake
					.col-6.pt-3
						= f.submit 'Lagre', :class => 'btn btn-success btn-block'