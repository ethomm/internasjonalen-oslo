.container
	.row.justify-content-center
		.col-md-8.col-lg-5.col-12
			.row.mt-4
				.col-12.text-center
					%h2
						Booking
			.row.mt-3
				.col-12
					= form_for @role, :url => role_path(@role.id),:html => {:method => :put} do |f|
						%h5
							Bookingansvalig:
						= f.select(:contactperson_id, [['Ingen', 0]] + @contactpeople.collect{|c| [c.name, c.id]}, {}, {class: 'custom-select'})
						%button.btn.btn-primary{:type => 'submit'}
							%i.fa.fa-floppy-o{"aria-hidden" => "true"}
						=link_to new_contactperson_path do
							%button.btn.btn-success
								%i.fa.fa-plus{"aria-hidden" => "true"}
								%i.fa.fa-user{"aria-hidden" => "true"}
			- @bookings.each do |b|
				.row.mt-3
					.col-9
						= link_to administrator_editbooking_path(:id => b.id) do
							%button.btn.btn-info.btn-sm.btn-block
								= b.title
					.col-3
						= link_to b, method: :delete, data: { confirm: 'Er du sikker?' } do
							%button.btn.btn-danger.btn-sm.btn-block.text-center
								%i.fa.fa-trash.animated.tada{"aria-hidden" => "true"}
			.row.mt-3
				.col-12
					= link_to tekniskcategories_path do
						%button.btn.btn-info.btn-sm.btn-block
							%i.fa.fa-cog.fa-spin{"aria-hidden" => "true"}
							Tekniske spesifikasjoner
			.row.mt-3
				.col-12
					= link_to new_booking_path do
						%button.btn.btn-outline-success.btn-sm.btn-block
							%i.fa.fa-pluss{"aria-hidden" => "true"}
							Nytt booking objekt

			.row.mt-3
				.col-12
					= link_to administrator_path do
						%button.btn-warning.btn.btn-block.btn-sm
							%i.fa.fa-reply{"aria-hidden" => "true"}
							Tilbake