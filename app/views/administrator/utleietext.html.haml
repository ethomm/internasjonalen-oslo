.container
	.row.justify-content-center
		.col-md-8.col-lg-5.col-12
			.row.mt-4
				.col-12.text-center
					%h2
						Utleie text
			.row.mt-3
				.col-12
					= form_for @utleie do |f|
						- if @utleie.errors.any?
							#error_explanation
								%h2= "#{pluralize(@utleie.errors.count, "error")} prohibited this utleie from being saved:"
								%ul
									- @utleie.errors.full_messages.each do |message|
										%li= message
						.row
							.col-12.pt-3
								= f.cktext_area :ingress
						.row
							.col-6.pt-3
								= link_to :back do
									%button.btn.btn-warning.btn-block
										%i.fa.fa-reply{"aria-hidden" => "true"}
										Tilbake
							.col-6.pt-3
								= f.submit 'Lagre', :class => 'btn btn-success btn-block'