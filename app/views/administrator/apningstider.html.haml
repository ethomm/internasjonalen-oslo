.container
	.row.mt-3
		%h3
			Dager åpent
	= form_for @setting do |f|
		.row.mt-3
			.col-12.col-md-8.col-lg-6.form-check.mb-2
				.row.mt-1
					.col-3
						%strong
							Dag
					.col.1
						-
					.col-4
						%strong
							Åpner
					.col-4
						%strong
							Stenger
				.row.mt-1
					.col-3
						Mandag
					.col-1 
						= f.check_box :mandag, {:class => "form-check-input position-static"}, 'true' , 'false'
					.col-4
						= f.number_field :mandaghour , min: 0, max: 23, :class => "apningstider"
						\:
						= f.number_field :mandagminute , min: 0, max: 59, :class => "apningstider"
					.col-4
						= f.number_field :mandagclosinghour , min: 0, max: 23, :class => "apningstider"
