.row.pt-3
  .col-12.col-lg-5
    %h3
      = titel
    .row.pt-2.pb-4
      .col-12
        %h5
          %i.fa.fa-user{"aria-hidden" => "true"}
          = person.name
          %small
            \-
            = contact_rolle person.stilling
        %p
          %i.fa.fa-envelope-o{"aria-hidden" => "true"}
          = person.email
        - if person.showtelefon?
          %p
            %i.fa.fa-phone{"aria-hidden" => "true"}
            (+47)
            = person.telefon