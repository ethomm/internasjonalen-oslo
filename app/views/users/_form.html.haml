= form_for @user do |f|
  - if @user.errors.any? 
    - @user.errors.full_messages.each do |error|
      = alert_generator(error) 
  .row
    .col-12.input-group.input-group-lg.mb-3.mt-4
      %span#person.input-group-addon
        %i.fa.fa-user-o{"aria-hidden" => "true"}
      = f.text_field :name, :class => "form-control", "aria-describedby" => "person"
  .row
    .col-12.input-group.input-group-lg.mb-3
      %span#email.input-group-addon
        @
      = f.text_field :email, :class => "form-control", "aria-describedby" => "email"
  .row
    .col-12.input-group.input-group-lg.mb-3
      %span#password.input-group-addon
        %i.fa.fa-key{"aria-hidden" => "true"}
      = f.password_field :password, :class => "form-control", "aria-describedby" => "password", :placeholder => "Passord"
  .row
    .col-12.input-group.input-group-lg.mb-3
      %span#passwordconfirmation.input-group-addon
        **
      = f.password_field :password_confirmation, :class => "form-control", "aria-describedby" => "passwordconfirmation", :placeholder => "Bekreft passord"
  .row
    .col-6
      = link_to users_path do
        .div.btn.btn-warning.btn-block.btn-lg
          Tilbake
    .col-6.actions.mb-3
      = f.submit 'Lagre', :class => "btn btn-lg btn-success btn-block"
    

